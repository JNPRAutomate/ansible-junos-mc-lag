{# this generates MC-LAG Aggregation specific config. It will be merged with the
config generated by the common role before it is applied to the device #}
interfaces {
{# Add all Vlans to the ICL link #}
    {{ mclag.icl_interface }} {
        unit 0 {
            family ethernet-switching {
                interface-mode trunk;
                vlan {
{% for vlan in vlans %}
                    members {{ vlan.id }};
{% endfor %}
                }
            }
        }
    }

{% if mclag.has_l3 %}
{# Create IRB for All Vlans with IP address configured #}
    irb {
{% for vlan in vlans %}
{% if vlan.ip is defined %}
        unit {{ vlan.id }} {
            family inet {
{% if vlan.vip is defined %}
                address {{ vlan.ip }}/{{ vlan.mask }} {
                    vrrp-group 10 {
                        virtual-address {{ vlan.vip }};
                        accept-data;
                    }
                }
{% else %}
                address {{ vlan.ip }}/{{ vlan.mask }};
{% endif %}
            }
        }
{% endif %}
{% endfor %}
    }
{% endif %}

{# Create AEs interface with all vlans configured #}
{# and Associate physical interfaces with all AEs #}
{# AEs names start at AE1 and increment #}
{% for name, mcae_group in mclag.links.mcae.iteritems() %}
    ae{{ mcae_group.key }} {
        aggregated-ether-options {
            lacp {
                active;
                periodic fast;
                system-id {{ mclag_shared.mac }};
                admin-key {{ mcae_group.key }};
            }
            mc-ae {
                mc-ae-id {{ mcae_group.key }};
                chassis-id {{ mclag.chassis_id }};
                mode {{ mclag_shared.mode }};
                status-control {{ mclag.status_control }};
                redundancy-group 1;
                init-delay-time 60;
{% if mclag.status_control == 'active' %}
                events {
                    iccp-peer-down {
                        prefer-status-control-active;
                    }
                }
{% endif %}
            }
        }
        description "{{ mcae_group.description | default(name) }}";
        unit 0 {
            family ethernet-switching {
                interface-mode trunk;
                vlan {
{% if mcae_group.vlans is defined %}
{% for vlan in mcae_group.vlans %}
                    members {{ vlan }};
{% endfor %}
{% else %}
{% for vlan in vlans %}
                    members {{ vlan.id }};
{% endfor %}
{% endif %}
                }
            }
        }
    }
{% for link in mcae_group.links %}
    {{ link }} {
        ether-options {
            802.3ad ae{{ mcae_group.key }};
        }
    }
{% endfor %}
{% endfor %}
}
 {# Configure All MC-LAG interface in RSTP Edge mode #}
protocols {
    rstp {
{% for name, mcae_group in mclag.links.mcae.iteritems() %}
        interface ae{{ mcae_group.key }} {
            edge;
        }
{% endfor %}
    }
    iccp {
        local-ip-addr {{ mclag.iccp.local_ip }};
        peer {{ mclag.iccp.peer_ip }} {
            redundancy-group-id-list 1;
            session-establishment-hold-time {{ mclag.iccp.session_hold_time }};
            liveness-detection {
                minimum-receive-interval {{ mclag.iccp.minimum_receive_interval }};
                transmit-interval {
                    minimum-interval {{ mclag.iccp.minimum_transmit_interval }};
                }
            }
        }
    }
    pim {
      rp {
          local {
              address {{ loopback_ip }};
          }
      }
      interface all;
    }
    igmp-snooping {
      vlan all;
    }
}

chassis {
    aggregated-devices {
        ethernet {
            device-count {{ mclag.nbr_ae }};
        }
    }
}

{# Create Vlans and associate IRB to it if available #}
vlans {
{% for vlan in vlans %}
    {{ vlan.name }} {
        vlan-id {{ vlan.id }};
{% if vlan.ip is defined %}
        l3-interface irb.{{ vlan.id }};
{% endif %}
    }
{% endfor %}
}
